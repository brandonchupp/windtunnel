<% include ../partials/head %>

<% include ../partials/nav %>

<div class='container-fluid text-center'>
    <div class='row align-items-center'>
        <div class='col-12'>
            <h1 class='pt-3'>Control Panel</h1>
        </div>
    </div>
    <div class='row'>
        <div class='col-6 p-3'>
            <input id='fan_speed' value='<%= fan_speed %>'></input>
            <h5>Fan Speed</h5>
        </div>
        <div class='col-6 p-3'>
            <div class='row'>
                <div class='col-lg-6 p-3'>
                    <div class='readout-box'>
                        <span id='velocity' class='readout'></span>
                        <span class='readout-units'>MPH</span>
                    </div>
                    <h5 class='p-2'>Velocity</h5>
                </div>
                <div class='col-lg-6 p-3'>
                    <div class='readout-box'>
                        <span id='total_pressure' class='readout'></span>
                        <span class='readout-units'>PSI</span>
                    </div>
                    <h5 class='p-2'>Total Pressure</h5>
                </div>
            </div>
        </div>
    </div>
    <div class='row'>
        <div class='col-6 p-3'>
            <input id='attack_angle' value='<%= attack_angle %>'></input>
            <h5>Attack Angle</h5>
        </div>
        <div class='col-6 p-3'>
            <div class='row align-items-center'>
                <div class='col-lg-6 p-3'>
                    <div class='readout-box'>
                        <span id='lift' class='readout'></span>
                        <span class='readout-units'>lbs</span>
                    </div>
                    <h5 class='p-2'>Lift</h5>
                    <%if (!recording) { %>
                        <button id='lift_tare' class='btn btn-secondary'>
                            <i class='fa fa-refresh'></i> Tare
                        </button>
                    <% } %>
                </div>
                <div class='col-lg-6 p-3'>
                    <div class='readout-box'>
                        <span id='drag' class='readout'></span>
                        <span class='readout-units'>lbs</span>
                    </div>
                    <h5 class='p-2'>Drag</h5>
                    <%if (!recording) { %>
                        <button id='drag_tare' class='btn btn-secondary'>
                            <i class='fa fa-refresh'></i> Tare
                        </button>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>